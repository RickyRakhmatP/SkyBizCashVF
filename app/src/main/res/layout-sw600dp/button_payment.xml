<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="$10"
            android:id="@+id/btn10"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@color/colorSuccess2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="7"
            android:id="@+id/btn7"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="8"
            android:id="@+id/btn8"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="9"
            android:id="@+id/btn9"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="$20"
            android:id="@+id/btn20"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@color/colorSuccess2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="4"
            android:id="@+id/btn4"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="5"
            android:id="@+id/btn5"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="6"
            android:id="@+id/btn6"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="$50"
            android:id="@+id/btn50"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@color/colorSuccess2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="1"
            android:id="@+id/btn1"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="2"
            android:id="@+id/btn2"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="3"
            android:id="@+id/btn3"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="$100"
            android:id="@+id/btn100"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@color/colorSuccess2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="0"
            android:id="@+id/btn0"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="."
            android:id="@+id/btnDot"
           android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#424242"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#424242"
            android:id="@+id/lnDel">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>