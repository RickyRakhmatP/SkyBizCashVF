<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:text="7"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn7"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <Button
            android:text="8"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn8"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <Button
            android:text="9"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn9"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >


        <Button
            android:text="4"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn4"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <Button
            android:text="5"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn5"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <Button
            android:text="6"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn6"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >



        <Button
            android:text="1"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn1"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>


        <Button
            android:text="2"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn2"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <Button
            android:text="3"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btn3"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_marginTop="2dp"
    android:layout_height="60dp"
    android:layout_weight="1"
    android:weightSum="3"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <Button
        android:text="0"
        android:layout_width="60dp"
        android:background="#424242"
        android:layout_height="match_parent"
        android:id="@+id/btn0"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <Button
        android:text="."
        android:layout_width="60dp"
        android:background="#424242"
        android:layout_height="match_parent"
        android:id="@+id/btnDot"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <Button
        android:text="Del"
        android:layout_width="60dp"
        android:background="#424242"
        android:layout_height="match_parent"
        android:id="@+id/btnDel"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:text="A"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btnA"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <Button
            android:text="B"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btnB"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <Button
            android:text="C"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btnC"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:text="M"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btnM"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <Button
            android:text="S"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btnS"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <Button
            android:text="T"
            android:layout_width="60dp"
            android:background="#424242"
            android:layout_height="match_parent"
            android:id="@+id/btnT"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</LinearLayout>