<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skybiz.com.posoffline.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:orientation="vertical"
        android:weightSum="8"
        android:paddingTop="6dp">

        <Button
            android:id="@+id/btnDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DASHBOARD"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnSalesOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SALES ORDER"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnCashReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CASH RECEIPT"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnQuickCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QUICK CASH"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnCreditNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CREDIT NOTE"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_weight="1"
            android:text="SERVICE"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_weight="1"
            android:text="Item"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnItemGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_weight="1"
            android:text="Item Group"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_weight="1"
            android:text="Member"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:textSize="20sp"
            android:textStyle="normal|bold" />



        <Button
            android:id="@+id/btnReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="REPORTS"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton" />


        <Button
            android:id="@+id/btnSync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="Synchronize"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"/>

        <Button
            android:id="@+id/btnUpdateNFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="Update NFC"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton"/>

        <Button
            android:id="@+id/btnRegisterNFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="Issue Gift Card"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton" />

        <Button
            android:id="@+id/btnTopUpNFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="Top Up Gift Card"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton" />

        <Button
            android:id="@+id/btnSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="SETTING"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorWhite"
            style="@style/AppTheme.RoundedCornerMaterialButton" />

    </LinearLayout>

</RelativeLayout>
